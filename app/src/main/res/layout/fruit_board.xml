<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_low"
    android:padding="@dimen/fruit_board_padding"
    tools:context="edu.neu.madcourse.pikachujump.GameActivity">

    <ImageButton
        android:id="@+id/image_button_0"
        style="@style/TileButton"
        android:layout_column="0"
        android:layout_row="0"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/image_button_1"
        style="@style/TileButton"
        android:layout_column="1"
        android:layout_row="2"
        tools:ignore="ContentDescription"/>
    <ImageButton
        android:id="@+id/image_button_2"
        style="@style/TileButton"
        android:layout_column="2"
        android:layout_row="2"
        tools:ignore="ContentDescription"/>
    <ImageButton
        android:id="@+id/image_button_3"
        style="@style/TileButton"
        android:layout_column="3"
        android:layout_row="2"
        tools:ignore="ContentDescription"/>
    <ImageButton
        android:id="@+id/image_button_4"
        style="@style/TileButton"
        android:layout_column="4"
        android:layout_row="2"
        tools:ignore="ContentDescription"/>
    <ImageButton
        android:id="@+id/image_button_5"
        style="@style/TileButton"
        android:layout_column="5"
        android:layout_row="0"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/image_button_6"
        style="@style/TileButton"
        android:layout_column="6"
        android:layout_row="2"
        tools:ignore="ContentDescription"/>
    <ImageButton
        android:id="@+id/image_button_7"
        style="@style/TileButton"
        android:layout_column="7"
        android:layout_row="2"
        tools:ignore="ContentDescription"/>
</GridLayout>